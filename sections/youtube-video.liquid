{%- include 'section-helper', snippet_instance: section, snippet_type: 'section', snippet_name: 'youtube-video', section_class: 'video-section', section_type: 'youtube-video' -%}

{% schema %}
  {
    "name": "Youtube Video",
    "settings": [
      {
        "type": "header",
        "content": "Content Settings"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Section Title",
        "default": "Headline"
      },
      {
        "type": "select",
        "id": "title_alignment",
        "label": "Title Alignment",
        "default": "center",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          }
        ]
      },
      {
        "type": "video_url",
        "id": "video_url",
        "label": "Video link",
        "accept": ["youtube"],
        "default": "https:\/\/www.youtube.com\/watch?v=_9VUPq3SxOc"
      },
      {
        "type": "image_picker",
        "id": "cover_image",
        "label": "Cover Image"
      },
      {
        "type": "select",
        "id": "video_width",
        "label": "Video Width",
        "default": "1-2",
        "options": [
          {
            "value": "1",
            "label": "Full"
          },
          {
            "value": "1-2",
            "label": "1/2"
          },
          {
            "value": "1-3",
            "label": "1/3"
          },
          {
            "value": "2-3",
            "label": "2/3"
          },
          {
            "value": "3-4",
            "label": "3/4"
          }
        ]
      },
      {
        "type": "header",
        "content": "Content Style"
      },
      {
        "type": "checkbox",
        "id": "enable_custom_styles",
        "label": "Enable Custom Styles",
        "default": true
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Section Title Color"
      },
      {
        "type": "range",
        "id": "title_font_size",
        "min": 12,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section Title Size",
        "default": 28
      },
      {
        "type": "range",
        "id": "spacing_top",
        "min": 0,
        "max": 200,
        "step": 5,
        "unit": "px",
        "label": "Spacing: Top",
        "default": 50
      },
      {
        "type": "range",
        "id": "spacing_bottom",
        "min": 0,
        "max": 200,
        "step": 5,
        "unit": "px",
        "label": "Spacing: Bottom",
        "default": 50
      }
    ],
    "presets": [{
      "name": "Youtube Video",
      "category": "Content"
    }]
  }
{% endschema %}
