      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Submit"
      },
      {
        "type": "select",
        "id": "text_align",
        "label": "Content Alignment",
        "default": "center",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          }
        ]
      },
      {
        "type": "header",
        "content": "Content Style"
