      },
      {
        "type": "range",
        "id": "spacing_bottom",
        "min": 0,
        "max": 200,
        "step": 5,
        "unit": "px",
        "label": "Spacing: Bottom",
        "default": 50
      },
      {
        "type": "header",
        "content": "Button Style"
      },
      {
        "type": "select",
        "id": "btn_style",
        "label": "Button Style",
        "default": "full",
        "options": [
          {
            "value": "full",
            "label": "Filled"
          },
          {
            "value": "hollow",
            "label": "Hollow"
          }
        ]
      },
      {
        "type": "color",
        "id": "btn_bg_color",
        "label": "Button Background Color"
      },
      {
        "type": "color",
        "id": "btn_text_color",
        "label": "Button Text Color"
      }
    ],
    "presets": [
      {
        "name": "Contact Form",
        "category": "Forms"
      }
    ]
  }
