{%- include 'section-helper', snippet_instance: section, snippet_type: 'section', snippet_name: 'richtext', section_class: 'text-section', section_type: 'richtext' -%}

{% schema %}
  {
    "name": "Rich Text",
    "settings": [
      {
        "type": "header",
        "content": "Text Settings"
      },
      {
        "type": "select",
        "id": "text_width",
        "label": "Text Width",
        "default": "1-2",
        "options": [
          {
            "value": "1",
            "label": "Full"
          },
          {
            "value": "1-2",
            "label": "1/2"
          },
          {
            "value": "1-3",
            "label": "1/3"
          },
          {
            "value": "2-3",
            "label": "2/3"
          },
          {
            "value": "3-4",
            "label": "3/4"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "desktop_centered",
        "label": "Centered Content (desktop)",
        "default": true
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Headline"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Add some text here.</p>"
      },
      {
        "type": "header",
        "content": "Mobile Settings"
      },
      {
        "type": "checkbox",
        "id": "mobile_centered",
        "label": "Centered Content",
        "default": false
      },
      {
        "type": "header",
        "content": "Content Style"
      },
      {
        "type": "checkbox",
        "id": "enable_custom_styles",
        "label": "Enable Custom Styles",
        "default": true
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title Color"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color"
      },
      {
        "type": "range",
        "id": "title_font_size",
        "min": 12,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Title Font Size",
        "default": 28
      },
      {
        "type": "range",
        "id": "text_font_size",
        "min": 12,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Text Font Size",
        "default": 16
      },
      {
        "type": "range",
        "id": "spacing_top",
        "min": 0,
        "max": 200,
        "step": 5,
        "unit": "px",
        "label": "Spacing: Top",
        "default": 50
      },
      {
        "type": "range",
        "id": "spacing_bottom",
        "min": 0,
        "max": 200,
        "step": 5,
        "unit": "px",
        "label": "Spacing: Bottom",
        "default": 50
      }
    ],
    "blocks": [
      {
        "type": "button",
        "name": "Button",
        "settings": [
          {
            "type": "text",
            "id": "btn_text",
            "label": "Button Text"
          },
          {
            "type": "url",
            "id": "btn_link",
            "label": "Button URL"
          },
          {
            "type": "header",
            "content": "Button Style"
          },
          {
            "type": "select",
            "id": "btn_style",
            "label": "Button Style",
            "default": "full",
            "options": [
              {
                "value": "full",
                "label": "Filled"
              },
              {
                "value": "hollow",
                "label": "Hollow"
              }
            ]
          },
          {
            "type": "color",
            "id": "btn_bg_color",
            "label": "Button Background Color"
          },
          {
            "type": "color",
            "id": "btn_text_color",
            "label": "Button Text Color"
          }
        ]
      }
    ],
    "presets": [{
      "name": "Rich Text",
      "category": "Content"
    }]
  }
{% endschema %}
