{% include 'hero', snippet_instance: section, snippet_type: 'section' %}

{% schema %}
  {
    "name": "Hero",
    "max_blocks": 3,
    "settings": [
      {
        "type": "header",
        "content": "Content Settings"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Introduce Your Brand"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Add a slogan text here.</p>"
      },
      {
        "type": "select",
        "id": "alignment",
        "label": "Text Position",
        "default": "center",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text Alignment",
        "default": "center",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "select",
        "id": "text_width",
        "label": "Text Width",
        "default": "2-3",
        "options": [
          {
            "value": "1-2",
            "label": "1/2"
          },
          {
            "value": "1-3",
            "label": "1/3"
          },
          {
            "value": "2-3",
            "label": "2/3"
          },
          {
            "value": "3-4",
            "label": "3/4"
          }
        ]
      },
      {
        "type": "header",
        "content": "Mobile Settings"
      },
      {
        "type": "checkbox",
        "id": "mobile_centered",
        "label": "Centered Content",
        "default": false
      },
      {
        "type": "header",
        "content": "Section Height"
      },
      {
        "type": "checkbox",
        "id": "full_height",
        "label": "Full Screen Height",
        "default": true
      },
      {
        "type": "range",
        "id": "mobile_height",
        "min": 200,
        "max": 800,
        "step": 10,
        "unit": "px",
        "label": "Section Height (Mobile)",
        "default": 400
      },
      {
        "type": "range",
        "id": "desktop_height",
        "min": 200,
        "max": 1000,
        "step": 10,
        "unit": "px",
        "label": "Section Height (Desktop)",
        "default": 600
      },
      {
        "type": "header",
        "content": "Content Style"
      },
      {
        "type": "checkbox",
        "id": "enable_custom_styles",
        "label": "Enable Custom Styles",
        "default": true
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title Color"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color"
      },
      {
        "type": "range",
        "id": "title_font_size",
        "min": 12,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section Title Size",
        "default": 52
      },
      {
        "type": "range",
        "id": "text_font_size",
        "min": 12,
        "max": 55,
        "step": 1,
        "unit": "px",
        "label": "Text Font Size",
        "default": 28
      },
      {
        "type": "range",
        "id": "spacing_top",
        "min": 0,
        "max": 400,
        "step": 5,
        "unit": "px",
        "label": "Spacing: Top",
        "default": 50
      },
      {
        "type": "range",
        "id": "spacing_bottom",
        "min": 0,
        "max": 400,
        "step": 5,
        "unit": "px",
        "label": "Spacing: Bottom",
        "default": 50
      },
      {
        "type": "header",
        "content": "Background Style"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "select",
        "id": "background_image_style",
        "label": "Background Image Style",
        "default": "cover",
        "options": [
          {
            "value": "cover",
            "label": "Cover"
          },
          {
            "value": "repeat",
            "label": "Repeat"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "parallax",
        "label": "Enable Parallax Effect",
        "default": false
      },
      {
        "type": "range",
        "id": "darken",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "%",
        "label": "Darken Background",
        "default": 0
      }
    ],
    "blocks": [
      {
        "type": "button",
        "name": "Button",
        "settings": [
          {
            "type": "text",
            "id": "btn_text",
            "label": "Button Text"
          },
          {
            "type": "url",
            "id": "btn_link",
            "label": "Button URL"
          },
          {
            "type": "header",
            "content": "Button Style"
          },
          {
            "type": "select",
            "id": "btn_style",
            "label": "Button Style",
            "default": "full",
            "options": [
              {
                "value": "full",
                "label": "Filled"
              },
              {
                "value": "hollow",
                "label": "Hollow"
              }
            ]
          },
          {
            "type": "color",
            "id": "btn_bg_color",
            "label": "Button Background Color",
            "default": "#fff"
          },
          {
            "type": "color",
            "id": "btn_text_color",
            "label": "Button Text Color",
            "default": "#2f3957"
          }
        ]
      }
    ],
    "presets": [{
      "name": "Hero",
      "category": "Hero"
    }]
  }
{% endschema %}
