            "default": "Subscribe"
          }
        ]
      },
      {
        "type": "html",
        "name": "Html",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Custom Html"
          },
          {
            "type": "html",
            "id": "html",
            "label": "Html"
          }
        ]
      },
      {
        "type": "text",
        "name": "Text",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Custom Text"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Add some text here.</p>"
          },
          {
            "type": "checkbox",
            "id": "show_social_links",
            "label": "Display Social Network Icons",
            "default": true
          }
        ]
      }
    ],
    "default": {
      "blocks": [
        {
          "type": "footer-menu"
        },
        {
          "type": "text"
        },
        {
          "type": "newsletter"
        }
      ]
    }
  }
{% endschema %}
